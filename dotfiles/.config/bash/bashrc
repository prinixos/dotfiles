source ~/.config/shell/export
source ~/.config/shell/alias

PS1='[\u@\h \W]\$ '
[[ $- != *i* ]] && return
bind "set completion-ignore-case on"

export HISTCONTROL=ignoreboth:erasedups

#starship prompt
eval "$(starship init bash)"

